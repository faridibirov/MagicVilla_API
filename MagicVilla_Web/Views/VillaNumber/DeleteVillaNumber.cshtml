@using MagicVilla_Web.Models.ViewModels
@model VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Delete Villa Number</h1>
		<hr />

		<input hidden asp-for="VillaNumberDTO.VillaNo" />
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="col-2">
				<label asp-for="VillaNumberDTO.VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input disabled asp-for="VillaNumberDTO.VillaNo" class="form-control" />
			</div>

			<div class="col-2">
				<label asp-for="VillaNumberDTO.VillaID" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<select disabled asp-for="VillaNumberDTO.VillaID" asp-items="@Model.VillaList" class="form-select">
					<option disabled selected>-SelectVilla-</option>
				</select>
			</div>

			<div class="col-2">
				<label asp-for="VillaNumberDTO.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<textarea disabled asp-for="VillaNumberDTO.SpecialDetails" class="form-control" rows="5"></textarea>
			</div>

			<div class="col-5 offset-2">
				<a asp-action="IndexVillaNumber" class="btn-primary btn form-control">Back to List</a>
			</div>
			<div class="col-5">
				<input type="submit" value="Delete" class="btn btn-danger form-control" />
			</div>
		</div>
	</div>
</form>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}